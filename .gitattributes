    <script>
        let timeLeft = 600;
        const timerElement = document.getElementById("timer");

        function updateTimer() {
            let minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;
            timerElement.textContent = `Temps restant : ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            if (timeLeft > 0) {
                timeLeft--;
                setTimeout(updateTimer, 1000);
            } else {
                alert("Temps écoulé ! Le quiz est soumis automatiquement.");
                document.getElementById("quizForm").dispatchEvent(new Event("submit"));
            }
        }
        updateTimer();

        document.getElementById("quizForm").addEventListener("submit", function(event) {
            event.preventDefault();
            let confirmation = confirm("Voulez-vous soumettre vos réponses ?");
            if (!confirmation) return;
            
            const correctAnswers = {
                q1: "32", q2: "Ouagadougou", q3: "Koudougou", q4: true,
                q5: "Dakar", q6: "Vert", q7: "Hervé", q8: "1960", q9: "Rome", q10: "17"
            };
            let score = 0;
            
            Object.keys(correctAnswers).forEach(id => {
                let answer = document.getElementById(id);
                let userValue = answer.type === "checkbox" ? answer.checked : answer.value.trim().toLowerCase();
                let correctValue = typeof correctAnswers[id] === "boolean" ? correctAnswers[id] : correctAnswers[id].toLowerCase();
                if (userValue == correctValue) score++;
            });
            
            let nomPrenom = document.getElementById("nomPrenom").value;
            let dob = document.getElementById("dob").value;
            let profession = document.getElementById("profession").value;
            
            let data = [["Nom et Prénom", "Date de naissance", "Profession", "Score"], [nomPrenom, dob, profession, score]];
            let ws = XLSX.utils.aoa_to_sheet(data);
            let wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Résultats");
            XLSX.writeFile(wb, "C:/Users/Public/Desktop/Quiz_vetcho.xlsx");
            
            alert(`Votre score est de ${score}/10`);
            let newEntry = confirm("Voulez-vous faire un nouvel enregistrement ?");
            if (newEntry) document.getElementById("quizForm").reset();
            else window.close();
        });
    </script>
